name: CI tests

on: [push, pull_request]

jobs:
  misc:
    name: Misc tests
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2
      - name: Set up JDK 1.8
        uses: actions/setup-java@v1
        with:
          java-version: 1.8
      - name: Build
        run: mvn package -DskipTests=true
      - name: Verify
        run: mvn verify -DskipTests=true
      - name: Misc Tests
        run: mvn '-Dtest=!sqlancer.dbms.**' test
